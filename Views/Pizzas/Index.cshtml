@model IEnumerable<Windy_City_Pizza.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceSmall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceMeduim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceLarge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceSmall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceMeduim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceLarge)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
